<div class="user">
<%= render 'partials/user', user: @user %>
<div class='bio'>
<p><%= @user.bio %></p>
</div>
<ul class='card'>
    <% @user.recent_three_posts.each do |post| %>
      <a href="/users/<%= @user.id %>/posts/<%= post.id %> ">
        <%= render 'partials/post', post: post %>
      </a>
    <% end %>
</ul>

  <p class='btn'><%= link_to "See all posts", user_posts_path(@user.id)%></p>
</div>

